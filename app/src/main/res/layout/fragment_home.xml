<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/padding_margin_normal"
            android:textSize="@dimen/normal_medium_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_normal"
            android:layout_marginRight="@dimen/padding_margin_normal"
            android:fontFamily="@font/gotham_book"
            android:text="@string/menu"
            android:textStyle="bold"
            android:textColor="@color/color_text_secondary" />

        <View
            android:layout_marginTop="@dimen/padding_margin_normal"

            android:layout_marginLeft="@dimen/padding_margin_normal"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent"></View>

        <LinearLayout
            android:id="@+id/layout_menu_user"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_pesan_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_margin_normal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_document"></androidx.appcompat.widget.AppCompatImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/listlaundry"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="@dimen/normal_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_panduan_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:padding="@dimen/padding_margin_normal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/heart"
                            ></androidx.appcompat.widget.AppCompatImageView>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:gravity="center"
                            android:textSize="@dimen/normal_font_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/panduan"
                            android:textStyle="bold"
                            android:textColor="@color/color_text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_menu_laundry"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_lihat_pesanan_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_margin_normal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_document"></androidx.appcompat.widget.AppCompatImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/lihatpesanan"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="@dimen/normal_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_panduan_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:padding="@dimen/padding_margin_normal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/heart"
                            ></androidx.appcompat.widget.AppCompatImageView>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:gravity="center"
                            android:textSize="@dimen/normal_font_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/panduan"
                            android:textStyle="bold"
                            android:textColor="@color/color_text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_menu_admin"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_list_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_margin_normal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_profile_colour"></androidx.appcompat.widget.AppCompatImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/listuser"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="@dimen/normal_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_list_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:padding="@dimen/padding_margin_normal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_laundry_colour"
                            ></androidx.appcompat.widget.AppCompatImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/listlaundry"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="@dimen/normal_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/fragment_home_button_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_margin_normal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_transaction"></androidx.appcompat.widget.AppCompatImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/transaksi"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="@dimen/normal_font_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground"
                   android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_normal"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:layout_marginRight="@dimen/padding_margin_normal"
                    android:layout_marginBottom="@dimen/padding_margin_normal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:padding="@dimen/padding_margin_normal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_heart"
                            ></androidx.appcompat.widget.AppCompatImageView>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:textSize="@dimen/normal_font_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_normal"
                            android:layout_marginRight="@dimen/padding_margin_normal"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/panduan"
                            android:textStyle="bold"
                            android:textColor="@color/color_text_secondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>