<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_collection_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/padding_margin_normal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="105dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:paddingTop="40dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:id="@+id/layout_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_margin_extra_thick">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Username"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView
                    android:id="@+id/etProfileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:textSize="@dimen/normal_smaller_font_size" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Nama"
                    android:textSize="@dimen/normal_smaller_font_size" />


                <TextView
                    android:id="@+id/etProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:hint="@string/nama"
                    android:inputType="text"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Tanggal Lahir"
                    android:textSize="@dimen/normal_smaller_font_size" />


                <TextView
                    android:id="@+id/tvProfileDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:hint="@string/tanggallahir"
                    android:inputType="text"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/color_text"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView
                    android:id="@+id/tvProfileGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:inputType="text"
                    android:text="@string/gender"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/normal_smaller_font_size" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="Alamat"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView
                    android:id="@+id/etProfileAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:inputType="text"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_bold"
                    android:text="No Handphone"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <TextView
                    android:id="@+id/etProfileHandphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal_thin"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/gotham_book"
                    android:hint="@string/nohandphone"
                    android:inputType="phone"
                    android:textSize="@dimen/normal_smaller_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_profile_paket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_normal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_margin_normal"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Jenis kurir"
                        android:textSize="@dimen/normal_smaller_font_size" />

                    <TextView
                        android:id="@+id/tvProfileKurir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_margin_normal_thin"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/gotham_book"
                        android:textSize="@dimen/normal_smaller_font_size" />

                    <TextView
                        android:layout_marginTop="@dimen/padding_margin_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/gotham_bold"
                        android:hint="@string/jenis_paket"
                        android:inputType="text"
                        android:textColor="@color/color_text"
                        android:textColorHint="@color/color_text"
                        android:textSize="@dimen/normal_smaller_font_size" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDetailLaundry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_margin_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/profileBtnEditHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_margin_medium"
                            android:background="@drawable/background_rounded_green"
                            android:gravity="center"
                            android:paddingStart="@dimen/padding_margin_normal"
                            android:paddingTop="@dimen/padding_margin_normal"
                            android:paddingEnd="@dimen/padding_margin_normal"
                            android:paddingBottom="@dimen/padding_margin_normal">


                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/editpaket"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/normal_font_size"
                                app:fontFamily="@font/gotham_bold" />


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/profileBtnEditUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_margin_normal_thin"
                            android:background="@drawable/background_rounded_green"
                            android:gravity="center"
                            android:paddingStart="@dimen/padding_margin_normal"
                            android:paddingTop="@dimen/padding_margin_normal"
                            android:paddingEnd="@dimen/padding_margin_normal"
                            android:paddingBottom="@dimen/padding_margin_normal">


                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/edituser"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/normal_font_size"
                                app:fontFamily="@font/gotham_bold" />


                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
