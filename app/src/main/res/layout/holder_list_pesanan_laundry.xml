<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_normal"
        android:weightSum="3">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/view_holder_pesanan_laundry_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Name"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/normal_font_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/gotham_bold" />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="0.5"
                android:id="@+id/view_holder_list_pesanan_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/padding_margin_normal_thin"
                android:background="@drawable/background_rounded_green">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_margin_normal_thin"
                    android:text="@string/detaillaundry"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_font_size"

                    app:fontFamily="@font/gotham_bold" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/view_holder_pesanan_laundry_remove"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/remove"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/view_holder_pesanan_laundry_accept"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_checked"
                    ></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>